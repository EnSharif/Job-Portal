<!DOCTYPE html>

<html>
<head>
    <title>@Page.Title</title>
    <meta name="viewport" content="width=device-width,initial scale=1" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-6/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/Style.css" rel="stylesheet" />

</head>
<body>
    <!--Navbar-->
    <nav class="navbar navbar-default navbar-fixed-top">
        <a href="~/Home" class="logo-head">
            <img src="~/images/logo-white.png" />
        </a>
        <div class="container">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed"
                        data-toggle="collapse"
                        data-target="#navbar">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


            </div>
            <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        @using (Html.BeginForm("Search", "Home", FormMethod.Post))
                        {
                            <input type="text" name="searchName" id="searchName" placeholder="Search" class="ser" />
                        }
                    </li>
                    <li>
                        <a href="~/Home/Contact"><i class="fa-solid fa-envelope"></i>Contact</a>
                    </li>
                    <li>
                        <a href="~/Home/About"><i class="fa-solid fa-circle-info"></i>About</a>
                    </li>
                    <li>
                        <a href="~/Jobs"><i class="fa-solid fa-folder"></i>Job List</a>
                    </li>
                    <li>
                        <a href="~/Home"><i class="fa-solid fa-house"></i>Home</a>
                    </li>
                </ul>

                <div>
                    <!--Partial Login-->
                    @Html.Partial("_Login")
                </div>
               
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row" style="min-height:550px">
            @RenderBody()
        </div>
    </div>
   

    <!--Footer-->
    <footer class=" myfooter">
        <div class="container">
            <div class="row foot-li">
                <div class="col-md-4">
                    <h3>Category</h3>
                    <ul>
                        <li><a href="#"><i class="fa-solid fa-chevron-right"></i>Development</a></li>
                        <li><a href="#"><i class="fa-solid fa-chevron-right"></i>Business</a></li>
                        <li><a href="#"><i class="fa-solid fa-chevron-right"></i>Tech &Aacute; IT</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h3>Quick Links</h3>
                    <ul>
                        <li><a href="~/Home"><i class="fa-solid fa-chevron-right"></i>Home</a></li>
                        <li><a href="~/Home/About"><i class="fa-solid fa-chevron-right"></i>About Us</a></li>
                        <li><a href="#"><i class="fa-solid fa-chevron-right"></i>Blogs</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h3>Find Us</h3>
                    <ul>
                        <li><i class="fa-solid fa-location-dot"></i>Mannheim,68159</li>
                        <li><i class="fa-solid fa-phone"></i>+4912345678</li>
                        <li><i class="fa-solid fa-at"></i>job@jobbord.de</li>
                       
                    </ul>

                </div>

            </div>

        </div>
        <div class="subfooter myfooter">
            <p>Copyright &copy; 2022 All Rights Reserved by...</p>
        </div>
    </footer>
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
