                    </ul>
                </div>

            </div>

        </div>
        <div class="subfooter myfooter">
            <p>copy </p>
        </div>
    </footer>
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
